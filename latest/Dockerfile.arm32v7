FROM arm32v7/golang:alpine@sha256:5ab38535d7fb7c866ff9b59acd8bf10c76f0825a06c260cd39701ab5a7946a41 as build

RUN go install github.com/bazelbuild/buildtools/buildifier@5.1.0

